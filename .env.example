# Confluent Cloud Environment Configuration
CONFLUENT_ENV_ID=env-xxxxxx
CONFLUENT_CLOUD_API_KEY=your-cloud-api-key
CONFLUENT_CLOUD_API_SECRET=your-cloud-api-secret

# Kafka Cluster Configuration
BOOTSTRAP_SERVERS=pkc-xxxxxx.region.provider.confluent.cloud:9092
KAFKA_API_KEY=your-kafka-api-key
KAFKA_API_SECRET=your-kafka-api-secret
KAFKA_REST_ENDPOINT=https://pkc-xxxxxx.region.provider.confluent.cloud
KAFKA_CLUSTER_ID=lkc-xxxxxx

# Flink Configuration
FLINK_ORG_ID=your-org-id
FLINK_REST_ENDPOINT=https://flink.region.provider.confluent.cloud
FLINK_ENV_NAME=your-flink-env
FLINK_DATABASE_NAME=your-database
FLINK_API_KEY=your-flink-api-key
FLINK_API_SECRET=your-flink-api-secret
FLINK_COMPUTE_POOL_ID=lfcp-xxxxxx

# Schema Registry Configuration
SCHEMA_REGISTRY_API_KEY=your-sr-api-key
SCHEMA_REGISTRY_API_SECRET=your-sr-api-secret
SCHEMA_REGISTRY_ENDPOINT=https://psrc-xxxxxx.region.provider.confluent.cloud

# TableFlow Configuration
TABLEFLOW_API_KEY=your-tableflow-api-key
TABLEFLOW_API_SECRET=your-tableflow-api-secret

# Optional Configuration
LOG=info
PROMPTS_FOLDER=./prompts
OPENAPI_SPEC_URL=
TELEMETRY_OPENAPI_SPEC_URL=

# Security & LLM Detection Configuration (Optional)
# Enable external LLM-based prompt injection detection
LLM_DETECTION_ENABLED=false
# Ollama endpoint for local development
LLM_DETECTION_URL=http://localhost:11434/api/chat
# Model for security analysis (lighter models recommended)
LLM_DETECTION_MODEL=llama3.2:1b
# Timeout for LLM requests in seconds
LLM_DETECTION_TIMEOUT=10
# API key for external services (leave empty for Ollama)
LLM_DETECTION_API_KEY=

# Directives Configuration (Optional)
ENABLE_DIRECTIVES=true
DIRECTIVES_FOLDER=./directives
